<%= render 'shared/content_title', title: 'New Category' %>
<%= render 'shared/errors', obj: @category %>

<div class="container">
	<%= form_for @category do |f| %>
		<div class="form-group">
			<%= f.label :name %>
			<%= f.text_field :name %>
		</div>
		<%= f.submit "Create category", class: 'btn btn-success' %>
	<% end %>
</div>