<% if obj.errors.any? %>
	<div class='container'>
		<div class='row'>
			<div class='alert alert-danger span12' >
				<h5>Please fix the following errors:</h5>
				<ul>
					<% obj.errors.full_messages.each do |msg| %>
						<li><%= msg %></li>
					<% end %>
				</ul>
			</div>
		</div>
	</div>
<% end %>